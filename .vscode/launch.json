{
    "version": "0.2.0",
        "configurations": [
            {   
                "name": "(gdb) Launch Main app",
                "type": "cppdbg",
                "request": "launch",
                "program": "${workspaceFolder}/bin/main",
                "stopAtEntry": false,
                "cwd": "${workspaceFolder}",
                "environment": [],
                "externalConsole": false,
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
                
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    },
                    { "text": "set output-radix 10" }
                ]           
            }            
        ]
    }